[Unit]
Description=ovs dtl
Requires=<ADDITIONAL_DEPENDENCIES>
Wants=ovs-watcher-volumedriver.service
After=ovs-watcher-volumedriver.service

[Service]
Type=simple
ExecStart=/usr/bin/failovercachehelper --config <CONFIG_PATH> --logrotation --logfile=/var/log/ovs/volumedriver/dtl_<VPOOL_NAME>.log
Restart=on-failure
RestartSec=5
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
