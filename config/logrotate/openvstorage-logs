/var/log/ovs/*.log {
    rotate 5
    size 20M
    compress
    copytruncate
    notifempty
}

/var/log/arakoon/*/*.log {
    su ovs ovs
    rotate 10
    size 19M
    compress
    delaycompress
    notifempty
    create 666 ovs ovs
    postrotate
        /usr/bin/pkill -SIGUSR1 arakoon
    endscript
}
